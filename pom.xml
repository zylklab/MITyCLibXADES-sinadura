	<distributionManagement>
		<repository>
			<id>maven-nexus-sinadura-repo</id>
			<name>Maven Nexus at Zylk</name>
			<url>https://services.zylk.net/nexus/content/repositories/sinadura-releases</url>
		</repository>
	</distributionManagement>
</project>